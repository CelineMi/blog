{% extends 'base.html.twig' %}

{% block title %}Tag index{% endblock %}

{% block body %}
    <h1>Tag index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>show tag</th>
                <th>edit tag</th>
                <th>related articles</th>
            </tr>
        </thead>
        <tbody>
        {% for tag in tags %}
            <tr>
                <td>{{ tag.id }}</td>
                <td>{{ tag.name }}</td>
                <td><a href="{{ path('tag_show', {'id': tag.id}) }}">show</a></td>
                <td><a href="{{ path('tag_edit', {'id': tag.id}) }}">edit</a></td>
                <td><a href="{{ path('show_tag_by_id', {'id': tag.id}) }}">related articles</a></td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('tag_new') }}">Create new</a>
{% endblock %}
